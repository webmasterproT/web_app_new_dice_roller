<%- include('partials/header.ejs') %>
<%- include('partials/navigation.ejs') %>

<main>
    <section id="diceRollerSection" class="dice-roller-container">
        <h2>Custom Dice Roller</h2>
        <div id="diceRollers">
            <div class="single-dice-roller">
                <label for="numDice">Number of Dice:</label>
                <input type="number" id="numDice" name="numDice" min="1" max="99" value="1">
                
                <label for="typeDice">Type of Dice:</label>
                <select id="typeDice" name="typeDice">
                    <option value="d2">d2</option>
                    <option value="d3">d3</option>
                    <option value="d4">d4</option>
                    <option value="d6" selected>d6</option>
                    <option value="d8">d8</option>
                    <option value="d10">d10</option>
                    <option value="d12">d12</option>
                    <option value="d20">d20</option>
                    <option value="d100">d100</option>
                </select>
                
                <label for="modifier">Modifier (+/-):</label>
                <input type="number" id="modifier" name="modifier" min="-99" max="99" value="0">
                
                <button id="rollButton" onclick="rollDice()">Roll</button>
            </div>
        </div>
        <button id="addDiceRoller" onclick="addDiceRoller()">+</button>
        
        <div id="output"></div>
        
        <label for="notesSection">Notes:</label>
        <textarea id="notesSection" name="notesSection" rows="4" cols="50"></textarea>
    </section>
    
    <section id="resultsLogSection" class="results-log-container">
        <h2>Results Log</h2>
        <div id="resultsLog"></div>
        <button id="saveLogButton" onclick="saveLogToPDF()">Save Log to PDF</button>
    </section>
</main>

<%- include('partials/footer.ejs') %>

<script src="/public/js/dice-roller.js"></script>
<script src="/public/js/results-log.js"></script>
